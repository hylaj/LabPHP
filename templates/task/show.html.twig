{% extends 'base.html.twig' %}

{% block title %}
{{ 'title.task_view'|trans({'%id%': task.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.task_view'|trans({'%id%': task.id|default('')}) }}</h1>
    {% if task is defined and task|length %}
        <dl class="dl-horizontal">
                    <dt>{{ 'label.id'|trans }}</dt>
                    <dd>{{ task.id }}</dd>
                    <dt>{{ 'label.title'|trans }}</dt>
                    <dd>{{ task.title }}</dd>
                    <dt>{{ 'label.created_at'|trans }}</dt>
                    <dd>{{ task.createdAt|format_date('long') }}</dd>
                    <dt>{{ 'label.updated_at'|trans }}</dt>
                    <dd>{{ task.updatedAt|format_date('long') }}</dd>
                    <dt>{{ 'label.comment'|trans }}</dt>
                    <dd>{{ task.comment }}</dd>
                    <dt>{{ 'label.category'|trans }}</dt>
                    <dd>{{  task.category.title }}</dd>
        </dl>
    {% else %}
        <p> {{ 'message.empty_list' }}</p>
    {% endif %}
    <a href="{{ url('task_index') }}">{{ 'label.go_back'|trans }}</a>
{% endblock %}